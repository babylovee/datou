.content{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.zan_content{
  margin-top: 30rpx;
  width: 92%;
  height: 710rpx;
  background: #fff;
  opacity: 0.75;
  border-radius: 15rpx;
  box-shadow: 5rpx 5rpx 20rpx 5rpx #e9e0a8
}
.info{
  width: 95%;
  height: 100rpx;
  margin: auto;
  border-bottom: 1rpx solid #cacaca
}
.info image{
   width: 70rpx;
   height: 70rpx;
   float: left;
   margin-top: 18rpx;
   margin-left: 15rpx
}
.center_content{
  width: 330rpx;
  height: 100rpx;
  float: left;
  padding-left: 20rpx
}
.top{
  width: 100%;
  height: 60%;
  font-size: 28rpx;
  color: #ae926f;
  line-height: 60rpx;
}
.bottom{
  width: 100%;
  height: 40%;
  font-size: 22rpx;
  color: #b68859;
}
.time{
  width: 110rpx;
  height: 80rpx;
  font-size: 20rpx;
  color: #dba86d;
  float: right;
  padding-top: 20rpx;
}